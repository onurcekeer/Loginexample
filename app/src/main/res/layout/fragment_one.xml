                        android:src="@mipmap/ic_launcher" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step" />
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/horizontal_scroll_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
