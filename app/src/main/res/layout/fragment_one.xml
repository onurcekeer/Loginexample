                        android:src="@mipmap/ic_launcher" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android" />
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>

</RelativeLayout>
